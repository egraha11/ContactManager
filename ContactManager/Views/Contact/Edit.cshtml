@model Contact;
@{
    string title = ViewBag.Action + " Contact";
}

<div class="container">
    <h2>@title</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Organization">Organization</label>
            <input asp-for="Organization" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" class="form-control">
                <option value="">select a category</option>
                @foreach(Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
            </select>
        </div>
        <input type="hidden" asp-for="ContactId" />
        <button type="submit" class="btn btn-primary bg-dark text-white">@ViewBag.Action</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary bg-dark text-white">Cancel</a>
    </form>

</div>

