@model List<Contact>;

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div>
    <p><a asp-controller="Contact" asp-action="Add">Add Contact</a></p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Fist Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Email
                </th>
                <th>
                    Category
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var contact in Model)
            {
            <tr>
                <td>
                    <a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId">@contact.FirstName</a>
                </td>
                <td>
                    <a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId">@contact.LastName</a>
                </td>
                <td>
                    @contact.PhoneNumber
                </td>
                <td>
                    @contact.Email
                </td>
                <td>
                    @contact.Category.CategoryName
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
